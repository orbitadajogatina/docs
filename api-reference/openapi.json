{
  "openapi": "3.0.1",
  "info": {
    "title": "Pergunta do Dia Bot API",
    "description": "Uma API para interagir com o banco de dados do bot Pergunta do Dia.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://pergunta-do-dia.onrender.com/api/v1"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/questions": {
      "get": {
        "description": "Retorna todas as perguntas disponíveis para o usuário ordenadas por envio, ou seja, recebe todas as suas (independentemente do status) e as já enviadas por outros usuários. O limite de perguntas retornadas é 500 por requisição.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Paginação dos 500 itens (0 a ∞)",
            "schema": {
              "type": "integer",
              "format": "int32",
              "example": 0,
              "minimum": 0
            }
          },
          {
            "name": "author",
            "in": "query",
            "description": "Filtrar pelo ID de um autor (snowflake)",
            "schema": {
              "type": "string",
              "example": "668199172276748328"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Pesquisar por texto",
            "schema": {
              "type": "string",
              "example": "geladeira"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todas as perguntas do usuário e já enviadas por outros usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Question"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Question": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the plant",
            "type": "string"
          },
          "tag": {
            "description": "Tag to specify the type",
            "type": "string"
          }
        }
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}